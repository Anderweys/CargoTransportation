<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="form-group">
            <h3 class="text-dark">Cargo Transportation - Main page</h3>
        </div>

        <div class="col-md-4 form-group">
            <label class="text-info form-label" id="account"></label>
        </div>

        <div class="btn-group" role="group">
            <div class="col-md-offset-2 col-md-10">
                <input type='button' class="btn btn-primary btn-sm" id="CreateCargo" value='Create cargo' />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="button" class="btn btn-info btn-sm" id="MyCargo" value='My cargo'/>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#CreateCargo').click(function (e) {
                e.preventDefault();
                window.location.replace('@Url.Action("Index", "Cargo")?token=' + localStorage.getItem("token"));
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyCargo').click(function (e) {
                e.preventDefault();
                window.location.replace('@Url.Action("MyCargo", "Cargo")?token=' + localStorage.getItem("token"));
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
    <script type="text/javascript">
        function PrintLogin(){
            var login = "Welcome to the Cargo Transportation, " + localStorage.getItem("login") + "!";
            $('#account').html(login);
        }
        PrintLogin();
    </script>
</body>

